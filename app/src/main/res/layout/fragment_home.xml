<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".HomeFragment">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/profile_image"
            app:srcCompat="@drawable/ic_profile" android:layout_marginBottom="50dp"
            android:layout_alignBottom="@+id/person_name" tools:ignore="UnknownId,VectorDrawableCompat"/>
    <TextView
            android:id="@+id/person_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textAlignment="center" android:layout_alignParentBottom="true" android:layout_marginBottom="381dp"
            android:layout_marginTop="320dp" android:layout_alignParentTop="true" android:gravity="center_horizontal"/>


</RelativeLayout>