<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".HomeFragment">

    <Button
            android:id="@+id/covid_report"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:text="@string/covid_report" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verify_meetup"/>

    <TextView
            android:id="@+id/person_name_google"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center_horizontal" app:layout_constraintBottom_toTopOf="@+id/person_user_id_google"
            app:layout_constraintTop_toBottomOf="@+id/profile_image" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/person_user_id_google"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center_horizontal" app:layout_constraintBottom_toTopOf="@+id/verify_meetup"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/person_name_google"/>

    <Button android:layout_width="300dp"
            android:layout_height="100dp"
            android:id="@+id/verify_meetup"
            android:text="@string/verify_meetup" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/profile_image"
            app:srcCompat="@drawable/ic_profile"
            android:layout_alignBottom="@+id/person_name" tools:ignore="UnknownId"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/person_name_google"/>


</androidx.constraintlayout.widget.ConstraintLayout>